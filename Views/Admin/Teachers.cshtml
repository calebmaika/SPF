@model Alliance_Group_5_Project_Student_Performance_Tracker.ViewModels.TeacherViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Teachers";
}

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h2 class="page-title">Teacher Management</h2>
            <p class="page-subtitle">Manage and organize your teaching staff</p>
        </div>
        <button class="btn-primary-modern" data-bs-toggle="modal" data-bs-target="#addTeacherModal">
            <i class="bi bi-plus-circle"></i>
            <span>Add Teacher</span>
        </button>
    </div>

    <!-- Search and Filter Bar -->
    <div class="filter-card">
        <div class="filter-grid">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" id="searchInput" placeholder="Search by name, username, or subject...">
            </div>
            <select class="select-modern" id="subjectFilter">
                <option value="">All Subjects</option>
                @foreach(var subject in ViewBag.Subjects ?? new List<Alliance_Group_5_Project_Student_Performance_Tracker.Models.Subject>())
                {
                    <option value="@subject.SubjectName.ToLower()">@subject.SubjectName</option>
                }
            </select>
            <div class="count-badge">
                <i class="bi bi-people-fill"></i>
                <span id="teacherCount">@Model.Teachers.Count()</span> Teachers
            </div>
        </div>
    </div>

    <!-- Teachers Grid -->
    <div class="cards-grid" id="teacherGrid">
        @foreach (var teacher in Model.Teachers)
        {
            <div class="teacher-card" 
                data-username="@teacher.Username.ToLower()" 
                data-name="@((teacher.FirstName + " " + teacher.LastName).ToLower())" 
                data-subject="@(teacher.Subject?.SubjectName?.ToLower() ?? "")">
                <div class="card-modern">
                    <div class="card-header-action">
                        <div class="avatar-modern">
                            @teacher.FirstName.Substring(0, 1)@teacher.LastName.Substring(0, 1)
                        </div>
                        <div class="dropdown">
                            <button class="btn-icon-modern" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-modern">
                                <li>
                                    <button type="button" class="dropdown-item-modern" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editTeacherModal"
                                            onclick="loadTeacherData(@teacher.Id)">
                                        <i class="bi bi-pencil-square"></i>
                                        <span>Edit Details</span>
                                    </button>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <form asp-action="DeleteTeacher" asp-route-id="@teacher.Id" method="post" class="delete-form">
                                        <button type="submit" class="dropdown-item-modern danger">
                                            <i class="bi bi-trash3"></i>
                                            <span>Delete</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="card-body-modern">
                        <h5 class="card-title-modern">@teacher.FirstName @teacher.LastName</h5>
                        <p class="card-username">@@@teacher.Username</p>
                        
                        <div class="info-list">
                            <div class="info-item">
                                <i class="bi bi-book"></i>
                                <span>@(teacher.Subject?.SubjectName ?? "No subject assigned")</span>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-calendar-event"></i>
                                <span>Age @teacher.Age</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    <div class="empty-state d-none" id="emptyState">
        <div class="empty-icon">
            <i class="bi bi-search"></i>
        </div>
        <h5>No teachers found</h5>
        <p>Try adjusting your search or filter criteria</p>
    </div>
</div>

<!-- Add Teacher Modal -->
<div class="modal fade" id="addTeacherModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-modern">
            <div class="modal-header-modern">
                <div>
                    <h5 class="modal-title-modern">Add New Teacher</h5>
                    <p class="modal-subtitle">Fill in the teacher's information</p>
                </div>
                <button type="button" class="btn-close-modern" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body-modern">
                <form asp-action="AddTeacher" method="post">
                    <div class="form-grid">
                        <div class="form-group-modern">
                            <label>Username</label>
                            <input asp-for="NewTeacher.Username" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Password</label>
                            <input asp-for="NewTeacher.Password" type="password" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>First Name</label>
                            <input asp-for="NewTeacher.FirstName" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Last Name</label>
                            <input asp-for="NewTeacher.LastName" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Age</label>
                            <input asp-for="NewTeacher.Age" type="number" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Subject</label>
                            <select asp-for="NewTeacher.SubjectId" class="select-modern" required>
                                <option value="">Select Subject</option>
                                @foreach(var subject in ViewBag.Subjects ?? new List<Alliance_Group_5_Project_Student_Performance_Tracker.Models.Subject>())
                                {
                                    <option value="@subject.SubjectId">@subject.SubjectName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn-secondary-modern" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn-primary-modern">
                            <i class="bi bi-check-circle"></i>
                            <span>Add Teacher</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Teacher Modal -->
<div class="modal fade" id="editTeacherModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-modern">
            <div class="modal-header-modern">
                <div>
                    <h5 class="modal-title-modern">Edit Teacher</h5>
                    <p class="modal-subtitle">Update the teacher's information</p>
                </div>
                <button type="button" class="btn-close-modern" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body-modern">
                <form asp-action="EditTeacher" method="post">
                    <input type="hidden" id="editTeacherId" name="Id" />
                    <div class="form-grid">
                        <div class="form-group-modern">
                            <label>Username</label>
                            <input id="editUsername" name="Username" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Password</label>
                            <input id="editPassword" name="Password" type="password" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>First Name</label>
                            <input id="editFirstName" name="FirstName" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Last Name</label>
                            <input id="editLastName" name="LastName" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Age</label>
                            <input id="editAge" name="Age" type="number" class="input-modern" required />
                        </div>
                        <div class="form-group-modern">
                            <label>Subject</label>
                            <select id="editSubject" name="SubjectId" class="select-modern" required>
                                <option value="">Select Subject</option>
                                @foreach(var subject in ViewBag.Subjects ?? new List<Alliance_Group_5_Project_Student_Performance_Tracker.Models.Subject>())
                                {
                                    <option value="@subject.SubjectId">@subject.SubjectName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn-secondary-modern" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn-primary-modern">
                            <i class="bi bi-save"></i>
                            <span>Update Teacher</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

